@model Nop.Plugin.ExchangeRate.Quandl.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="Quandl" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="PyatnitcaUra" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PyatnitcaUra" />
                        <span asp-validation-for="PyatnitcaUra"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn btn-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
